<ol reversed class="postlist" start="{{ postlist.length }}">
    {% for post in postlist | reverse %}
        <li class="postlist__item h-entry {% if post.data.draft %}postlist__item--draft{% endif %}">
            <h2 class="postlist__title p-name">
                <a
                    href="{{ post.url | url }}"
                    class="postlist__link u-url"
                    rel="bookmark"
                >
                    {{ post.data.title }}
                </a>
            </h2>

            <div class="postlist__meta">
                <time class="postlist__date dt-published" datetime="{{ post.date | iso }}">
                    {{ post.date | readableDate('dd LLL yyyy') }}
                </time>

                {% if post.data.tags %}
                    <span aria-hidden="true">&sdot;</span>
                    <svg class="mx-2" width="14px" height="14px" viewBox="0 0 18 18" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><g transform="translate(-882.000000, -578.000000)"><g transform="translate(883.000000, 579.000000)"><path d="M14.8942308,-1.09362948e-06 L10.1673077,-1.09362948e-06 C10.0203306,-1.09362948e-06 9.87928666,0.0579692616 9.775,0.161538462 L0.325,9.61153846 C-0.105772365,10.0444264 -0.105772365,10.7440352 0.325,11.1769231 L4.825,15.6769231 C5.25788789,16.1076954 5.95749673,16.1076954 6.39038462,15.6769231 L15.8365385,6.23076923 C15.9401077,6.12648257 15.9980901,5.98543867 15.9980901,5.83846154 L15.9980901,1.10769231 C15.9995112,0.814143474 15.8837976,0.532147627 15.676586,0.324214097 C15.4693745,0.116280567 15.1877828,-0.000413206981 14.8942308,-1.09362948e-06 Z" stroke=currentColor stroke-width="1.23076923" stroke-linecap="round" stroke-linejoin="round"></path><path d="M12.9230769,4.30769231 C12.2433418,4.30769231 11.6923077,3.75665815 11.6923077,3.07692308 C11.6923077,2.397188 12.2433418,1.84615385 12.9230769,1.84615385 C13.602812,1.84615385 14.1538462,2.397188 14.1538462,3.07692308 C14.1538462,3.40334337 14.0241762,3.71639434 13.7933622,3.94720835 C13.5625482,4.17802235 13.2494972,4.30769231 12.9230769,4.30769231 Z" fill=currentColor fill-rule="nonzero"></path></g></g></g></svg>
                    <span class="postlist__tags p-category">
                        {{ post.data.tags|join(', ') }}
                    </span>
                {% endif %}

                {% if post.data.draft %}
                    <span aria-hidden="true">&sdot;</span>
                    <span class="postlist__status">(Draft)</span>
                {% endif %}
            </div>

            <p class="postlist__excerpt p-summary">
            {% if post.data.description %}
                {{ post.data.description }}
            {% else %}
                {{ post.templateContent | excerpt | striptags }}
            {% endif %}
            </p>
        </li>
    {% endfor %}
</ol>